<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>


<VBox prefHeight="227.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox prefHeight="47.0" prefWidth="600.0">
         <children>
            <Label text="New Game" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="44.0" prefWidth="600.0" spacing="10.0">
         <children>
            <Circle radius="15.0" stroke="BLACK" strokeType="INSIDE" />
            <TextField fx:id="playerNameBlackInput" promptText="Player 1 name" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="29.0" prefWidth="600.0">
         <children>
            <Label text="vs." textAlignment="CENTER" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="44.0" prefWidth="600.0" spacing="10.0">
         <children>
            <Circle fill="WHITE" radius="15.0" stroke="BLACK" strokeType="INSIDE" />
            <TextField fx:id="playerNameWhiteInput" promptText="Player 2 name" />
         </children>
      </HBox>
      <HBox alignment="TOP_RIGHT" prefHeight="51.0" prefWidth="600.0">
         <children>
            <Button fx:id="createGameButton" mnemonicParsing="false" text="Create Game" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
